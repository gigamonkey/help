      <div class="item">
        <div class="who">
          <span><a href="/c/{{item.class_id}}/help/{{item.id}}">#{{item.id}}</a> -
            <span>{{item.email}}</span>
          </span>
          <span class="time" data-time="{{item.time}}"></span>
        </div>
        <div class="section">
          <h1>Problem</h1>
          <div>
            {{item.problem | md | safe}}
          </div>
          <h1>Tried</h1>
          <div>
            {{item.tried | md | safe}}
          </div>
        </div>
        <div class="buttons">
          <span class="status">Status: {{ item | status}}</span>
          {% if item.helper %}<span>Helping: {{item.helper}}</span>{% endif %}
          <span>
            <!-- FIXME show particular buttons based on the page and the role of the user -->
            <a href="/c/{{class_id}}/help/{{item.id}}/take">Take</a>
            <a href="/c/{{class_id}}/help/{{item.id}}/requeue">Requeue</a>
            <a href="/c/{{class_id}}/help/{{item.id}}/done">Done</a>
            <a href="/c/{{class_id}}/help/{{item.id}}/reopen">Reopen</a>
            <a href="/c/{{class_id}}/help/{{item.id}}/discard">Discard</a>
          </span>
        </div>
      </div>
